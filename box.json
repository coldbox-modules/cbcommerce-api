{
    "name":"cbCommerce",
    "version":"1.0.0",
    "author":"Ortus Solutions, Corp",
    "location":"git@gitlab.ortushq.com:coldbox-modules/cbox-commerce.git#v1.0.0",
    "homepage":"https://gitlab.ortushq.com/coldbox-modules/cbox-commerce",
    "documentation":"https://gitlab.ortushq.com/coldbox-modules/cbox-commerce",
    "repository":{
        "type":"git",
        "URL":"https://gitlab.ortushq.com/coldbox-modules/cbox-commerce"
    },
    "bugs":"https://gitlab.ortushq.com/coldbox-modules/cbox-commerce/issues",
    "slug":"cbCommerce",
    "shortDescription":"An e-commerce module for the coldbox platform",
    "description":"An e-commerce module for the coldbox platform",
    "type":"modules",
    "dependencies":{
    	"coldbox-asset-bag":"^v1.0.2",
        "cfmigrations":"^1.3.2",
        "cffractal":"6.1.2",
        "cbsecurity":"^1.3.0",
        "cbstorages":"^1.4.0",
        "cbguard":"^1.0.0",
        "BCrypt":"^2.5.0",
        "cbvalidation":"^1.3.1+51",
        "cbauth":"^2.0.0",
        "quick": "v2.0.0-beta.3",
        "cfcollection":"^3.6.1",
        "stripecfml":"^1.1.4",
        "cbjavaloader": "^2.0.0+44"
    },
    "devDependencies":{},
    "installPaths":{
        "quick":"modules/quick",
        "coldbox-asset-bag":"modules/coldbox-asset-bag",
        "cfmigrations":"modules/cfmigrations",
        "cffractal":"modules/cffractal",
        "cbsecurity":"modules/cbsecurity",
        "cbstorages":"modules/cbstorages",
        "cbguard":"modules/cbguard",
        "BCrypt":"modules/BCrypt",
        "cbvalidation":"modules/cbvalidation",
        "cbauth":"modules/cbauth",
        "cfcollection":"test-harness/modules/cfcollection/",
        "stripecfml":"modules/stripecfml",
        "cbjavaloader" : "modules/cbjavaloader"
    },
    "scripts":{
        "postVersion":"package set location='git@gitlab.ortushq.com:coldbox-modules/cbox-commerce.git#v`package version`'",
        "onRelease":"publish",
        "postPublish":"!git push && !git push --tags"
    },
    "ignore":[
        "**/.*",
        "test-harness",
        "examples",
        "*/.md"
    ],
    "cfmigrations":{
        "connectionInfo":{
            "password":"${DB_PASSWORD}",
            "connectionString":"${DB_CONNECTIONSTRING}",
            "class":"${DB_CLASS}",
            "username":"${DB_USER}"
        },
        "schema":"${DB_DATABASE}",
        "defaultGrammar":"MySQLGrammar"
    }
}